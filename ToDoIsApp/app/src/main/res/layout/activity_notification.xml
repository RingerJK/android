<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:foregroundGravity="center_horizontal"
    android:nestedScrollingEnabled="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Notification"
        android:layout_marginBottom="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignTop="@+id/newTvTime_str"
        android:background="@android:color/black"
        android:visibility="visible" />

    <TextView
        android:id="@+id/newTvDate_str"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newTvTime_str"
        android:clickable="true"
        android:onClick="onClickDate"
        android:text="Дата\nhh.mi"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/newTvTime_str"
        android:background="@android:color/black"
        android:visibility="visible" />

    <TextView
        android:id="@+id/newTvTime_str"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:clickable="true"
        android:onClick="onClickTime"
        android:text="Время\nhh.mi"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/newTvDate_str"
        android:background="@android:color/black"
        android:visibility="visible" />

    <Button
        android:id="@+id/Okay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:onClick="onClickAddNotification"
        android:text="@string/add_notification" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Okay"
        android:layout_centerHorizontal="true"
        android:onClick="onClickCancel"
        android:text="@string/cancel_notification" />


</RelativeLayout>